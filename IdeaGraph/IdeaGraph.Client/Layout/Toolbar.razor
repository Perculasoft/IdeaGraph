@code {
    [Parameter]
    public EventCallback OnAddIdea { get; set; }

    private bool IsActive(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        if (path == "/" && currentPath == "/")
            return true;
        if (path != "/" && currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase))
            return true;
        return false;
    }
}
